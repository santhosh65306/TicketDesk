<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:layout_marginBottom="@dimen/activity_horizontal_margin"

    android:weightSum="5">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dashboard_black_24dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:text="a"
            android:id="@+id/tv_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
          />

        <TextView
            android:text="a"
            android:id="@+id/tv_list_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.DeviceDefault.Small"

            />
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/tv_stage_head"
                android:text="Date/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                />

                <TextView
                    android:id="@+id/tv_list_date"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3px"
                    android:layout_toRightOf="@+id/tv_stage_head"
                    android:text="hello"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"

                    android:gravity="center"
                    android:layout_marginBottom="3px"
                    android:layout_marginRight="3px"
                    android:layout_marginLeft="3px"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_list_out"
                android:text="Count"
                android:layout_toLeftOf="@+id/rect_out"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/rect_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3px"
                android:text="45k"

                android:paddingLeft="4dp"
                android:layout_alignParentRight="true"
                android:paddingRight="4dp"
                android:gravity="center"
                android:layout_marginBottom="3px"
                android:layout_marginRight="3px"
                android:layout_marginLeft="3px"
                />
            </RelativeLayout>
        </RelativeLayout>




    </LinearLayout>

</LinearLayout>